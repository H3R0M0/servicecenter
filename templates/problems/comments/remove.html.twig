{% extends "main.html.twig" %}

{% block title %}{{ 'problems.comments.remove.label'|trans }}{% endblock %}

{% block content %}
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-danger">
            <i class="fas fa-trash"></i> {{ 'actions.remove'|trans }}
        </button>

        <a href="{{ path('show_problem', { id: problem.id }) }}" class="btn btn-sm btn-secondary">
            {{ 'actions.cancel'|trans }}
        </a>
    </div>
    {{ form_end(form) }}

{% endblock %}