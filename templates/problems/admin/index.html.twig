{% extends "main.html.twig" %}

{% block post_javascript %}
    <script src="{{ asset('build/problems.js') }}"></script>
{% endblock %}

{% block title %}Probleme{% endblock %}

{% block content %}
    {% if isFilterActive %}
        <div class="bs-callout bs-callout-info">
            <h4>{{ 'info.label'|trans }}</h4>
            <p>{{ 'problems.filter.info'|trans }}</p>
            <a href="#filter" class="btn btn-sm btn-secondary">{{ 'problems.filter.navigate'|trans }}</a>
        </div>
    {% endif %}

    <div class="contentbox clearfix hidden-print">
        <form action="{{ path('admin_problems_bulk') }}" class="form-inline pull-left" role="form" method="post">
            <input type="hidden" name="ids" id="problem-ids" value="" />

            <div class="input-group">
                <select class="form-control" id="action" name="action">
                    <option value="">{{ 'problems.bulk.placeholder'|trans }}</option>
                    <option value="mark_solved">{{ 'problems.bulk.solved.label'|trans }}</option>
                    <option value="set_maintenance">{{ 'problems.bulk.maintenance.label'|trans }}</option>
                    <option value="unset_maintenance">{{ 'problems.bulk.problem.label'|trans }}</option>
                    <option value="contact_person">{{ 'problems.bulk.take.label'|trans }}</option>
                </select>
                <input type="hidden" name="_csrf_token" value="{{ csrfTokenBulk }}" />
                <span class="input-group-append">
                    <button type="submit" class="btn btn-primary">{{ 'actions.execute'|trans }}</button>
                </span>
            </div>
        </form>

        <form class="form-inline pull-right" role="form" method="get">
            <div class="input-group">
                <input type="text" name="q" class="form-control" id="q" placeholder="{{ 'problems.search.label'|trans }}" value="{{ q }}" />
                <span class="input-group-append">
                    <button type="submit" class="btn btn-primary">{{ 'actions.search'|trans }}</button>

                    {% if q is not empty %}
                        <a href="{{ path('problems') }}" class="btn btn-sm btn-secondary" role="button">{{ 'problems.search.close'|trans }}</a>
                    {% endif %}
                </span>
            </div>


        </form>
    </div>

    <div class="contentbox">
        <table class="table table-striped table-hover problems">
            <colgroup>
                <col class="column-sm" />
                <col />
                <col class="column-md" />
                <col class="column-md" />
                <col class="column-lg" />
            </colgroup>
            <thead>
            <tr>
                <th>
                    <input type="checkbox" data-toggle="select-all" data-select-target="#problem-ids" />
                </th>
                <th>
                    {{ 'label.problem'|trans }}
                </th>
                <th class="hidden-xs hidden-sm">
                    {{ 'label.priority'|trans }}
                </th>
                <th class="hidden-xs hidden-sm">
                    {{ 'label.status'|trans }}
                </th>
                <th>
                    {{ 'label.last_change'|trans }}
                </th>
            </tr>
            </thead>
            <tbody>
           {% for problem in problems %}
                <tr>
                    <td>
                        <input type="checkbox" data-toggle="select" data-select-target="#problem-ids" value="{{ problem.id }}" />
                    </td>
                    <td>
                        <p class="visible-xs-sm-lg">
                            <span class="badge badge-{{ problem.priority|priority_class }}">{{ problem.priority|priority }}</span>
                            <span class="badge badge-{{ problem.status|status_class }}">{{ problem.status|status }}</span>
                        </p>

                        <a href="{{ path('admin_show_problem', { id: problem.id }) }}">
                            {{ problem.device.room }} [{{ problem.device }}]: {{ problem.problemType }}
                        </a>

                        {% if problem.isMaintenance %}
                            <i class="fa fa-wrench" aria-hidden="true" data-toggle="tooltip" title="{{ 'label.maintenance'|trans }}"></i>
                        {% endif %}

                        {% if problem.comments|length > 0 %}
                            <i class="fa fa-comment" aria-hidden="true" data-toggle="tooltip" title="{% transchoice problem.comments|length with {'%numComments%': problem.comments|length } %}problems.comments.info{% endtranschoice %}"></i>
                        {% endif %}

                        <div class="extra-information">
                            {{ problem.content|markdown_short }}
                        </div>
                    </td>
                    <td class="hidden-xs hidden-sm"><span class="badge badge-{{ problem.priority|priority_class }}">{{ problem.priority|priority }}</span></td>
                    <td class="hidden-xs hidden-sm"><span class="badge badge-{{ problem.status|status_class }}">{{ problem.status|status }}</span></td>
                    <td>
                        {% if problem.updatedAt is not null %}
                            <span title="{{ problem.updatedAt|format_date }}">
                                {{ problem.updatedAt|moment }}
                            </span>
                        {% else %}
                            <span title="{{ problem.createdAt|format_date }}">
                                {{ problem.createdAt|moment }}
                            </span>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

    {% include '@Common/includes/pagination.html.twig' with {
        currentFilters: { q: q },
        currentPage: page,
        paginationPath: 'problems',
        lastPage: pages,
        showAlwaysFirstAndLast: true
    } only %}

    <div class="contentbox hidden-print" id="filter">
        <h4>{{ 'problems.filter.label'|trans }}</h4>

        {{ form_start(filterForm) }}
        {{ form_widget(filterForm) }}

        <div class="buttons">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-check"></i> {{ 'problems.filter.apply'|trans }}
            </button>

            <button type="submit" name="reset" value="{{ csrfTokenResetFilter.value }}" class="btn btn-sm btn-secondary">
                {{ 'problems.filter.reset.label'|trans }}
            </button>
        </div>

        {{ form_end(filterForm) }}
    </div>
{% endblock %}