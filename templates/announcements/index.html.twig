{% extends "main.html.twig" %}

{% block title %}{{ 'announcements.label'|trans }}{% endblock %}

{% block content %}
    {% for category in categories %}
        <div class="contentbox">
            <h4>{{ category.name }} ({{ category.announcements|length }})</h4>

            <div class="row">
                {% for announcement in category.announcements %}
                    <div class="clearfix">
                        <p class="pull-left">
                            <a href="{{ path('show_announcement', { id: announcement.id }) }}">{{ announcement.title }}</a>
                        </p>

                        <p class="pull-right">
                            {% if announcement.endDate is null %}
                                {{ 'announcements.timeopen'|trans({'%start%': announcement.startDate|moment }) }}
                            {% else %}
                                {{ 'announcements.time'|trans({'%start%': announcement.startDate|moment, '%end%': announcement.endDate|moment }) }}
                            {% endif %}
                        </p>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
{% endblock %}