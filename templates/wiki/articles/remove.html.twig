{% extends "main.html.twig" %}

{% block title %}{{ 'wiki.articles.remove.label'|trans }}{% endblock %}

{% block content %}
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-danger">
            <i class="fa fa-trash"></i> {{ 'actions.remove'|trans }}
        </button>

        {% if article.category is null %}
            <a href="{{ path('wiki') }}" class="btn btn-sm btn-secondary">
                {{ 'actions.cancel'|trans }}
            </a>
        {% else %}
            <a href="{{ path('wiki_article', { id: article.id, slug: article.slug }) }}" class="btn btn-sm btn-secondary">
                {{ 'actions.cancel'|trans }}
            </a>
        {% endif %}
    </div>
    {{ form_end(form) }}


{% endblock %}