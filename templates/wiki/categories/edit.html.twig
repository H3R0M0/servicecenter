{% extends "main.html.twig" %}

{% block title %}{{ 'wiki.categories.edit.label'|trans }}{% endblock %}

{% block content %}
    {% include 'wiki/breadcrumb.html.twig' with { item: category } only %}

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-primary">
            <i class="fa fa-save"></i> {{ 'actions.save'|trans }}
        </button>

        <a href="{{ path('wiki_category', { id: category.id, slug: category.slug }) }}" class="btn btn-sm btn-secondary">
            {{ 'actions.cancel'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}