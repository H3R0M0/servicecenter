{% extends "main.html.twig" %}

{% block title %}{{ 'wiki.categories.add.label'|trans }}{% endblock %}

{% block breadcrumb %}
    {% include 'wiki/breadcrumb.html.twig' with { item: parent, append: block('title') } only %}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-primary">
            <i class="fas fa-plus"></i> {{ 'actions.add'|trans }}
        </button>

        {% if category.parent is null %}
            <a href="{{ path('wiki') }}" class="btn btn-sm btn-secondary">
                {{ 'actions.cancel'|trans }}
            </a>
        {% else %}
            <a href="{{ path('wiki_category', { id: category.parent.id, slug: category.parent.slug }) }}" class="btn btn-sm btn-secondary">
                {{ 'actions.cancel'|trans }}
            </a>
        {% endif %}
    </div>
    {{ form_end(form) }}
{% endblock %}