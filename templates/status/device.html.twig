{% extends "main.html.twig" %}

{% block title %}{{ 'status.label'|trans }}{% endblock %}

{% block content %}
    {% if status.problems is empty %}
        <div class="bs-callout bs-callout-success">
            <h4>{{ 'status.noproblems.hooray'|trans }}</h4>

            <p>{{ 'status.noproblems.info'|trans({'%device%': device.name, '%type%': device.type }) }}</p>
        </div>
    {% else %}
        <div class="bs-callout bs-callout-danger">
            <h4>{{ 'status.overview.header_details'|trans({'%target%': device.name }) }}</h4>
            <p>
                {{ 'status.overview.problems'|transchoice(status.problemCount, { '%numProblems%': status.problemCount })|raw }}
            </p>
        </div>
    {% endif %}


    {% for announcement in announcements %}
        <div class="bs-callout bs-callout-info">
            <h4>{{ announcement.title }}</h4>
            {{ announcement.details|markdown }}

            <a href="{{ path('show_announcement', { id: announcement.id }) }}" class="btn btn-sm btn-primary">Details anzeigen</a>
        </div>
    {% endfor %}


    {% for problem in status.problems %}
        <div class="contentbox">
            <h4>
                {{ problem.problemType }}

                <span class="badge badge-{{ problem.priority|priority_class }}">{{ problem.priority|priority }}</span>&nbsp;
                <span class="badge badge-{{ problem.status|status_class }}">{{ problem.status|status }}</span>&nbsp;
                {% if problem.isMaintenance %}
                    <span class="badge badge-warning">{{ 'label.maintenance'|trans }}</span>
                {% endif %}
            </h4>

            <p>{{ problem.content }}</p>

            <a href="{{ path('show_problem', { id: problem.id }) }}" class="btn btn-primary btn-sm" role="button">
                {{ 'status.details'|trans }}
            </a>
        </div>
    {% endfor %}

    <div class="buttons">
        <a href="{{ path('status_room', { alias: device.room.alias }) }}" class="btn btn-primary btn-sm">
            <i class="fa fa-arrow-left"></i> {{ 'status.back.room'|trans }}
        </a>
    </div>
{% endblock %}