{% extends "main.html.twig" %}

{% block title %}Aktueller Status{% endblock %}

{% block content %}

    <div class="row">
        <div class="col bs-callout bs-callout-{% if status.problemCount == 0 %}success{% else %}danger{% endif %}">
            <h4>{{ 'status.overview.header'|trans }}</h4>
            <p>
                {{ 'status.overview.problems'|transchoice(status.problemCount, { '%%numProblems%': status.problemCount })|raw }}
            </p>
        </div>

        <div class="col bs-callout bs-callout-{% if status.maintenanceCount == 0 %}success{% else %}warning{% endif %}">
            <h4>{{ 'status.overview.header'|trans }}</h4>
            <p>
                {{ 'status.overview.maintenance'|transchoice(status.maintenanceCount, { '%numProblems%': status.maintenanceCount })|raw }}
            </p>
        </div>

        <div class="col bs-callout bs-callout-{% if status.announcementCount == 0 %}success{% else %}info{% endif %}">
            <h4>{{ 'status.overview.header'|trans }}</h4>
            <p>
                {{ 'status.overview.announcements'|transchoice(status.announcementCount, { '%numAnnouncements%': status.announcementCount })|raw }}
            </p>
        </div>
    </div>

    {% for categoryStatus in status.roomCategoryStatuses %}
        <div class="contentbox">
            <h4>
                {{ categoryStatus.category.name }}
                <span class="badge badge-{% if categoryStatus.problemCount > 0 %}danger{% else %}success{% endif %}">
                    {{ 'status.problems'|transchoice(categoryStatus.problemCount, {'%numProblems%': categoryStatus.problemCount}) }}
                </span>

                {% if categoryStatus.maintenanceCount > 0 %}
                    <span class="badge badge-warning">
                        {{ 'status.maintenance'|transchoice(categoryStatus.maintenanceCount, {'%numProblems%': categoryStatus.maintenanceCount}) }}
                    </span>
                {% endif %}
            </h4>

            <div class="row no-padding">
                {% for roomStatus in categoryStatus.roomStatuses %}
                    <div class="col-md-6 clearfix">
                        <p class="pull-left">
                            <a href="{{ path('status_room', { alias: roomStatus.room.alias }) }}">{{ roomStatus.room.name }}</a>
                        </p>

                        <div class="pull-right">
                            {% if roomStatus.problemCount > 0 %}
                                <span class="badge badge-danger">
                                    {{ 'status.problems'|transchoice(roomStatus.problemCount, {'%numProblems%': roomStatus.problemCount}) }}
                                </span>
                                &nbsp;
                            {% endif %}

                            {% if roomStatus.maintenanceCount > 0 %}
                                <span class="badge badge-warning">
                                    {{ 'status.maintenance'|transchoice(roomStatus.maintenanceCount, {'%numProblems%': roomStatus.maintenanceCount}) }}
                                </span>
                                &nbsp;
                            {% endif %}

                            {% if roomStatus.announcementCount > 0 %}
                                <span class="badge badge-primary">
                                    {{ 'status.announcements'|transchoice(roomStatus.announcementCount, {'%numAnnouncements%': roomStatus.announcementCount}) }}
                                </span>
                                &nbsp;
                            {% endif %}

                            {% if roomStatus.problemCount == 0 and roomStatus.maintenanceCount == 0 and roomStatus.announcementCount == 0 %}
                                <span class="badge badge-success">
                                    {{ 'status.no_problems'|trans }}
                                </span>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
{% endblock %}