{% extends "main.html.twig" %}

{% block title %}{{ 'rooms.categories.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin_rooms') }}">{{ 'rooms.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ 'rooms.categories.label'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="contentbox">
         <div class="table-responsive">
            <table class="table table-striped table-hover">
                <colgroup>
                    <col />
                    <col class="column-md" />
                    <col class="column-lg" />
                </colgroup>

                <thead>
                <tr>
                    <th>{{ 'label.name'|trans }}}</th>
                    <th>{{ 'label.rooms'|trans }}</th>
                    <th>{{ 'actions.label'|trans }}</th>
                </tr>
                </thead>

                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>{{ category.rooms.count() }}</td>
                        <td>
                            <a href="{{ path('edit_roomcategory', { id: category.id }) }}" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit"></i> {{ 'actions.edit'|trans }}
                            </a>

                            <a href="{{ path('remove_roomcategory', {id: category.id }) }}" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i> {{ 'actions.remove'|trans }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="buttons">
        <a href="{{ path('add_roomcategory') }}" class="btn btn-sm btn-primary">
            <i class="fas fa-plus"></i> {{ 'rooms.categories.add.label'|trans }}
        </a>

        <a href="{{ path('admin_rooms') }}" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left"></i> {{ 'actions.back'|trans }}
        </a>
    </div>
{% endblock%}