{% extends "main.html.twig" %}

{% block title %}{{ 'rooms.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ 'rooms.label'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    {% for category in categories %}
        <div class="card">
            <div class="card-header">{{ category.name }} <span class="badge badge-secondary badge-pill">{{ category.rooms|length }}</span></div>

            <table class="table table-striped table-hover table-bordered">
                <colgroup>
                    <col />
                    <col class="column-md" />
                    <col class="column-md" />
                </colgroup>

                <thead>
                <tr>
                    <th>{{ 'label.name'|trans }}</th>
                    <th>{{ 'label.devices'|trans }}</th>
                    <th>{{ 'actions.label'|trans }}</th>
                </tr>
                </thead>

                <tbody>
                {% for room in category.rooms %}
                    <tr>
                        <td>{{ room.name }}</td>
                        <td>{{ room.devices.count() }}</td>
                        <td>
                            <a href="{{ path('edit_room', { alias: room.alias }) }}" class="btn btn-sm btn-primary" title="{{ 'actions.edit'|trans }}">
                                <i class="fas fa-edit"></i>
                            </a>

                            <a href="{{ path('remove_room', { alias: room.alias }) }}" class="btn btn-sm btn-danger" title="{{ 'actions.remove'|trans }}">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endfor %}

    <div class="buttons">
        <a href="{{ path('add_room') }}" class="btn btn-sm btn-primary">
            <i class="fas fa-plus"></i> {{ 'rooms.add.label'|trans }}
        </a>

        <a href="{{ path('admin_roomcategories') }}" class="btn btn-sm btn-secondary">
            <i class="fas fa-cogs"></i> {{ 'rooms.categories.label'|trans }}
        </a>
    </div>
{% endblock%}