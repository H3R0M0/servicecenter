{% extends "main.html.twig" %}

{% block title %}{{ 'rooms.label'|trans }}{% endblock %}

{% block content %}
    {% for category in categories %}
        <div class="contentbox">
            <h4>{{ category.name }} ({{ category.rooms|length }})</h4>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <colgroup>
                        <col />
                        <col class="column-md" />
                        <col class="column-lg" />
                    </colgroup>

                    <thead>
                    <tr>
                        <th>{{ 'label.name'|trans }}</th>
                        <th>{{ 'label.devices'|trans }}</th>
                        <th>{{ 'actions.label'|trans }}</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for room in category.rooms %}
                        <tr>
                            <td>{{ room.name }}</td>
                            <td>{{ room.devices.count() }}</td>
                            <td>
                                <a href="{{ path('edit_room', { alias: room.alias }) }}" class="btn btn-sm btn-primary">
                                    <i class="fa fa-edit"></i> {{ 'actions.edit'|trans }}
                                </a>

                                <a href="{{ path('remove_room', { alias: room.alias }) }}" class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash"></i> {{ 'actions.remove'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endfor %}

    <div class="buttons">
        <a href="{{ path('add_room') }}" class="btn btn-sm btn-primary">
            <i class="fa fa-plus"></i> {{ 'rooms.add.label'|trans }}
        </a>

        <a href="{{ path('admin_roomcategories') }}" class="btn btn-sm btn-secondary">
            <i class="fa fa-cogs"></i> {{ 'rooms.categories.label'|trans }}
        </a>
    </div>
{% endblock%}