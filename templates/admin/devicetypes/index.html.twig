{% extends "main.html.twig" %}

{% block title %}{{ 'device_types.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ 'device_types.label'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <table class="table table-striped table-hover">
            <colgroup>
                <col />
                <col class="column-md" />
                <col class="column-md" />
                <col class="column-lg" />
            </colgroup>

            <thead>
            <tr>
                <th>{{ 'label.name'|trans }}</th>
                <th>{{ 'label.devices'|trans }}</th>
                <th>{{ 'label.problemtypes'|trans }}</th>
                <th>{{ 'actions.label'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for type in types %}
                <tr>
                    <td>{{ type.name }}</td>
                    <td>{{ type.devices.count() }}</td>
                    <td>{{ type.problemTypes.count() }}</td>
                    <td>
                        <a href="{{ path('edit_devicetype', { id: type.id }) }}" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i> {{ 'actions.edit'|trans }}
                        </a>

                        <a href="{{ path('remove_devicetype', {id: type.id }) }}" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> {{ 'actions.remove'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="buttons">
        <a href="{{ path('add_devicetype') }}" class="btn btn-sm btn-primary">
            <i class="fas fa-plus"></i> {{ 'device_types.add.label'|trans }}
        </a>
    </div>
{% endblock%}