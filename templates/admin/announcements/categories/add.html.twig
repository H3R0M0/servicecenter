{% extends "main.html.twig" %}

{% block title %}{{ 'announcements.categories.add.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin_announcements') }}">{{ 'announcements.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin_announcementcategories') }}">{{ 'announcements.categories.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-primary">
            <i class="fas fa-plus"></i> {{ 'actions.add'|trans }}
        </button>

        <a href="{{ path('admin_announcementcategories') }}" class="btn btn-sm btn-secondary">
            {{ 'actions.cancel'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}