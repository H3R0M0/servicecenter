{% extends "main.html.twig" %}

{% block title %}{{ 'announcements.categories.label'|trans }}{% endblock %}

{% block content %}
    <div class="contentbox">
         <div class="table-responsive">
            <table class="table table-striped table-hover">
                <colgroup>
                    <col />
                    <col class="column-md" />
                    <col class="column-lg" />
                </colgroup>

                <thead>
                <tr>
                    <th>{{ 'label.name'|trans }}</th>
                    <th>{{ 'announcements.label'|trans }}</th>
                    <th>{{ 'actions.label'|trans }}</th>
                </tr>
                </thead>

                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>{{ category.announcements.count }}</td>
                        <td>
                            <a href="{{ path('edit_announcementcategory', { id: category.id }) }}" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit"></i> {{ 'actions.edit'|trans }}
                            </a>

                            <a href="{{ path('remove_announcementcategory', {id: category.id }) }}" class="btn btn-sm btn-danger">
                                <i class="fa fa-trash"></i> {{ 'actions.remove'|trans }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="buttons">
        <a href="{{ path('add_announcementcategory') }}" class="btn btn-sm btn-primary">
            <i class="fa fa-plus"></i> {{ 'announcements.categories.add.label'|trans }}
        </a>

        <a href="{{ path('admin_announcements') }}" class="btn btn-sm btn-secondary">
            <i class="fa fa-arrow-left"></i> {{ 'actions.back'|trans }}
        </a>
    </div>
{% endblock%}