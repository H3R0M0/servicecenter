{% extends "main.html.twig" %}

{% block title %}{{ 'announcements.categories.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin_announcements') }}">{{ 'announcements.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <table class="table table-striped table-hover table-bordered">
            <colgroup>
                <col />
                <col class="column-md" />
                <col class="column-md" />
            </colgroup>

            <thead>
            <tr>
                <th>{{ 'label.name'|trans }}</th>
                <th>{{ 'announcements.label'|trans }}</th>
                <th>{{ 'actions.label'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>{{ category.announcements.count }}</td>
                    <td>
                        <a href="{{ path('edit_announcementcategory', { id: category.id }) }}" class="btn btn-sm btn-primary" title="{{ 'actions.edit'|trans }}">
                            <i class="fas fa-edit"></i>
                        </a>

                        <a href="{{ path('remove_announcementcategory', {id: category.id }) }}" class="btn btn-sm btn-danger" title="{{ 'actions.remove'|trans }}">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="buttons">
        <a href="{{ path('add_announcementcategory') }}" class="btn btn-sm btn-primary">
            <i class="fas fa-plus"></i> {{ 'announcements.categories.add.label'|trans }}
        </a>

        <a href="{{ path('admin_announcements') }}" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left"></i> {{ 'actions.back'|trans }}
        </a>
    </div>
{% endblock%}